@model MedicalRecordModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link href="~/css/print.css" rel="stylesheet" />
    <style type="text/css">

        @@media print {
            * {
                color: #000;
                background-color: #fff;
                @@include box-shadow(none);
                @@include text-shadow(none);
            }
        @@page {
                size: a4
            }

        }

        @@media screen {
            * {
                color: #000;
                background-color: #fff;
                @@include box-shadow(none);
                @@include text-shadow(none);
            }

            @@page {
                size: a4
            }

        }
    </style>
</head>
<body>
    <div class="container">
        <div>
            <h5>I. KHÁM THỂ LỰC</h5>
            @{
                if (Model.Details.PhysicalExamination.IsRegistered)
                {
                    <div class="d-flex justify-content-between">
                        <div class="mr-3"><span class="mr-2">Chiều cao:</span>@Model.Details.PhysicalExamination.Height cm</div>
                        <div class="mr-3"><span class="mr-2">Cân nặng:</span>@Model.Details.PhysicalExamination.Height kg</div>
                        <div class="mr-3"><span class="mr-2">Chỉ số BMI:</span>@Model.Details.PhysicalExamination.Height kg</div>
                    </div>
                    <div class="d-flex justify-content-between w-50">
                        <div class="mr-3">
                            <span class="mr-2">Mạch:</span>@Model.Details.PhysicalExamination.HeartBeat lần/phút
                        </div>
                        <div class="mr-3">
                            <span class="mr-2">Huyết áp:</span>@Model.Details.PhysicalExamination.BloodPressure mmHg
                        </div>
                    </div>
                    <div>
                        <span class="mr-2">Phân loại thể lực:</span>@Model.Details.PhysicalExamination.PhysicalLevel
                    </div>
                }
                else
                {
                    <div class="d-flex justify-content-between">
                        <div class="mr-3"><span class="mr-2">Chiều cao:</span>....................... cm</div>
                        <div class="mr-3"><span class="mr-2">Cân nặng:</span>........................ kg</div>
                        <div class="mr-3"><span class="mr-2">Chỉ số BMI:</span>...................... kg</div>
                    </div>
                    <div class="d-flex justify-content-between w-50">
                        <div class="mr-3">
                            <span class="mr-2">Mạch:</span>...................... lần/phút
                        </div>
                        <div class="mr-3">
                            <span class="mr-2">Huyết áp:</span>............................ mmHg
                        </div>
                    </div>
                    <div>
                        <span class="mr-2">Phân loại thể lực:</span>........................
                    </div>
                }
            }
        </div>
        <h5 class="pt-2">II. KHÁM LÂM SÀNG</h5>
        <div class="row">
            <table class="table table-bordered">
                <thead class="text-center">
                    <tr>
                        <th class="align-middle" style="width:950px">Nội dung khám</th>
                        <th class="align-middle" style="width: 200px">Họ tên, chữ ký của bác sỹ</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="align-middle">
                            <div class="pr-2 pl-2">
                                @{
                                    if (Model.Details.InternalMedicineExamination.IsRegistered)
                                    {

                                        <div><b>1. Nội khoa</b></div>
                                        <div class="ml-3 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">a) Tuần hoàn:</span>
                                            <div class="w-100 result text-justify pl-4">@Model.Details.InternalMedicineExamination.Circulatory</div>
                                        </div>
                                        <div class="ml-4 d-flex mb-2">
                                            <span class="mr-2 text-nowrap">Phân loại:</span>
                                            <span>@Model.Details.InternalMedicineExamination.CirculatoryLevel</span>
                                        </div>
                                        <div class="ml-3 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">b) Hô hấp:</span>
                                            <div class="w-100 result text-justify pl-4">@Model.Details.InternalMedicineExamination.Respiratory</div>
                                        </div>
                                        <div class="ml-4 d-flex mb-2">
                                            <span class="mr-2 text-nowrap">Phân loại:</span>
                                            <span>@Model.Details.InternalMedicineExamination.RespiratoryLevel</span>
                                        </div>
                                        <div class="ml-3 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">c) Tiêu hóa:</span>
                                            <div class="w-100 result text-justify pl-4">@Model.Details.InternalMedicineExamination.Alimentary</div>
                                        </div>
                                        <div class="ml-4 d-flex mb-2">
                                            <span class="mr-2 text-nowrap">Phân loại:</span>
                                            <span>@Model.Details.InternalMedicineExamination.AlimentaryLevel</span>
                                        </div>
                                        <div class="ml-3 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">d) Thận - Tiết niệu:</span>
                                            <div class="w-100 result text-justify pl-4">@Model.Details.InternalMedicineExamination.NephroUrology</div>
                                        </div>
                                        <div class="ml-4 d-flex mb-2">
                                            <span class="mr-2 text-nowrap">Phân loại:</span>
                                            <span>@Model.Details.InternalMedicineExamination.NephroUrologyLevel</span>
                                        </div>
                                        <div class="ml-3 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">đ) Cơ - Xương - Khớp:</span>
                                            <div class="w-100 result text-justify pl-4">@Model.Details.InternalMedicineExamination.Musculoskeletal</div>
                                        </div>
                                        <div class="ml-4 d-flex">
                                            <span class="mr-2 text-nowrap">Phân loại:</span>
                                            <span>@Model.Details.InternalMedicineExamination.MusculoskeletalLevel</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div><b>1. Nội khoa</b></div>
                                        <div class="ml-3 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">a) Tuần hoàn:</span>
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                        <div class="ml-4 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">Phân loại:</span>
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                        <div class="ml-3 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">b) Hô hấp:</span>
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                        <div class="ml-4 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">Phân loại:</span>
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                        <div class="ml-3 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">c) Tiêu hóa:</span>
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                        <div class="ml-4 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">Phân loại:</span>
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                        <div class="ml-3 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">d) Thận - Tiết niệu:</span>
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                        <div class="ml-4 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">Phân loại:</span>
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                        <div class="ml-3 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">đ) Cơ - Xương - Khớp:</span>
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                        <div class="ml-4 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">Phân loại:</span>
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                    }
                                }
                            </div>
                        </td>
                        <td class="align-middle">
                            <p class="text-center d-flex align-items-end justify-content-center" style="height: 150px">
                                @if (Model.Details.InternalMedicineExamination.IsRegistered)
                                {
                                    @Model.Details.InternalMedicineExamination.DoctorName;
                                }
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td class="align-middle">
                            <div class="pr-2 pl-2">
                                @{
                                    if (Model.Details.NeurologyExamination.IsRegistered)
                                    {
                                        <div class="ml-3 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">e) Thần Kinh:</span>
                                            <div class="w-100 result text-justify">@Model.Details.NeurologyExamination.Neurosurgery</div>
                                        </div>
                                        <div class="ml-4 d-flex mb-2">
                                            <span class="mr-2 text-nowrap">Phân loại:</span>
                                            <span>@Model.Details.NeurologyExamination.Neurosurgery</span>
                                        </div>
                                        <div class="ml-3 d-flex mb-1">
                                            <span class="mr-2 text-nowrap">g) Tâm thần:</span>
                                            <div class="w-100 result text-justify">@Model.Details.NeurologyExamination.Psychiatry</div>
                                        </div>
                                        <div class="ml-4 d-flex">
                                            <span class="mr-2 text-nowrap">Phân loại:</span>
                                            <span>@Model.Details.NeurologyExamination.PsychiatryLevel</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="ml-3 d-flex">
                                            <span class="mr-2 text-nowrap">e) Thần Kinh:</span>
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                        <div class="ml-3 d-flex">
                                            <span class="mr-2 text-nowrap">g) Tâm thần:</span>
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                    }
                                }
                            </div>
                        </td>
                        <td class="align-middle">
                            <p class="text-center d-flex align-items-end justify-content-center" style="height: 100px">
                                @if (Model.Details.NeurologyExamination.IsRegistered)
                                {
                                    @Model.Details.NeurologyExamination.DoctorName
                                }
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td class="align-middle">
                            @{
                                if (Model.Details.SurgeryExamination.IsRegistered)
                                {
                                    <div class="pr-2 pl-2 d-flex">
                                        <span class="mr-2 text-nowrap"><strong>2. Ngoại khoa</strong></span>
                                        <div class="ml-3 d-flex mb-1">
                                            <div class="w-100 result text-justify">@Model.Details.SurgeryExamination.Surgery</div>
                                        </div>
                                    </div>
                                    <div class="pl-4 pr-2 d-flex">
                                        <span class="mr-2 text-nowrap">Phân loại:</span>
                                        <span>@Model.Details.SurgeryExamination.SurgeryLevel</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="pr-2 pl-2 d-flex">
                                        <span class="mr-2 text-nowrap"><strong>2. Ngoại khoa</strong></span>
                                        <div class="ml-3 d-flex mb-1 w-100">
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                    </div>
                                    <div class="pl-4 pr-2 d-flex">
                                        <span class="mr-2 text-nowrap">Phân loại:</span>
                                        <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                    </div>
                                }
                            }
                        </td>
                        <td class="align-middle">
                            <p class="text-center d-flex align-items-end justify-content-center" style="height: 70px">
                                @if (Model.Details.SurgeryExamination.IsRegistered)
                                {
                                    @Model.Details.SurgeryExamination.DoctorName
                                }

                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td class="align-middle">
                            @{
                                if (Model.Details.DermatologyExamination.IsRegistered)
                                {
                                    <div class="pr-2 pl-2 d-flex">
                                        <span class="mr-2 text-nowrap"><strong>3. Da liễu</strong></span>
                                        <div class="ml-3 d-flex mb-1">
                                            <div class="w-100 result text-justify">@Model.Details.DermatologyExamination.Dermatology</div>
                                        </div>
                                    </div>
                                    <div class="pl-4 pr-2 d-flex">
                                        <span class="mr-2 text-nowrap">Phân loại:</span>
                                        <span>@Model.Details.DermatologyExamination.DermatologyLevel</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="pr-2 pl-2 d-flex">
                                        <span class="mr-2 text-nowrap"><strong>3. Da liễu</strong></span>
                                        <div class="ml-3 d-flex mb-1 w-100">
                                            <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                        </div>
                                    </div>
                                    <div class="pl-4 pr-2 d-flex">
                                        <span class="mr-2 text-nowrap">Phân loại:</span>
                                        <input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled>
                                    </div>
                                }
                            }
                        </td>
                        <td class="align-middle">
                            <p class="text-center d-flex align-items-end justify-content-center" style="height: 70px">
                                @if (Model.Details.DermatologyExamination.IsRegistered)
                                {
                                    @Model.Details.DermatologyExamination.DoctorName
                                }
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td class="align-middle">
                            <span class="mr-2"><strong>4. Mắt</strong></span>
                            @{
                                if (Model.Details.OphthalmologyExamination.IsRegistered)
                                {
                                    <table class="table-borderless w-100" style="border: none">
                                        <tr>
                                            <td rowspan="2">- Kết quả khám thị lực:</td>
                                            <td>
                                                <div class="d-block">
                                                    <span class="mr-2">Không kính:</span>
                                                    <span class="mr-2">Mắt phải:</span>
                                                    <span class="mr-2">@Model.Details.OphthalmologyExamination.RightEyeSightWithoutGlass</span>
                                                    <span class="mr-2">Mắt trái:</span>
                                                    <span class="mr-2">@Model.Details.OphthalmologyExamination.LeftEyeSightWithoutGlass</span>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="d-block">
                                                    <span class="mr-2">Có kính:</span>
                                                    <span class="mr-2">Mắt phải:</span>
                                                    <span class="mr-2">@Model.Details.OphthalmologyExamination.RightEyeSightWithGlass</span>
                                                    <span class="mr-2">Mắt trái:</span>
                                                    <span class="mr-2">@Model.Details.OphthalmologyExamination.LeftEyeSightWithGlass</span>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>- Các bệnh về mắt (nếu có):</td>
                                            <td>@Model.Details.OphthalmologyExamination.EyeDiseases</td>
                                        </tr>
                                    </table>
                                    <div class="ml-4 d-flex mb-2">
                                        <span class="mr-2 text-nowrap">Phân loại:</span>
                                        <span>@Model.Details.OphthalmologyExamination.OphthalmologyLevel</span>
                                    </div>
                                }
                                else
                                {
                                    <table class="table table-borderless w-100 table-responsive" style="border: none">
                                        <tr>
                                            <td rowspan="2">- Kết quả khám thị lực:</td>
                                            <td>
                                                <div class="d-block">
                                                    <span class="mr-2">Không kính:</span>
                                                    <span class="mr-2">Mắt phải:</span>
                                                    <span class="mr-2">.......................</span>
                                                    <span class="mr-2">Mắt trái:</span>
                                                    <span class="mr-2">.......................</span>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="d-block">
                                                    <span class="mr-2">Có kính:</span>
                                                    <span class="mr-2">Mắt phải:</span>
                                                    <span class="mr-2">.......................</span>
                                                    <span class="mr-2">Mắt trái:</span>
                                                    <span class="mr-2">.......................</span>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="mr-2 text-nowrap text-justify">- Các bệnh về mắt (nếu có):</td>
                                            <td class="w-100"><input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled></td>
                                        </tr>
                                    </table>
                                    <div class="ml-4 d-flex mb-2">
                                        <span class="mr-2 text-nowrap">Phân loại:</span>
                                        <span class="w-100 pr-2"><input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled></span>
                                    </div>
                                }
                            }
                        </td>
                        <td class="align-middle">
                            <p class="text-center d-flex align-items-end justify-content-center" style="height: 100px">
                                @if (Model.Details.OphthalmologyExamination.IsRegistered)
                                {
                                    @Model.Details.OphthalmologyExamination.DoctorName
                                }
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span class="mr-2"><strong>5. Tai - Mũi - Họng</strong></span>
                            @{
                                if (Model.Details.OtorhinolaryngologyExamination.IsRegistered)
                                {
                                    <table class="table-borderless w-100 table-responsive" style="border:none;">
                                        <tr>
                                            <td rowspan="2">- Kết quả khám thính lực:</td>
                                            <td>
                                                <div class="d-block">
                                                    <span class="mr-2">Tai trái:</span>
                                                    <span class="mr-2">Nói thường:</span>
                                                    <span class="mr-2">@Model.Details.OtorhinolaryngologyExamination.LeftEarNormal</span>
                                                    <span class="mr-2">Nói thầm:</span>
                                                    <span class="mr-2">@Model.Details.OtorhinolaryngologyExamination.LeftEarWhisper</span>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="d-block">
                                                    <span class="mr-2">Tai trái:</span>
                                                    <span class="mr-2">Nói thường:</span>
                                                    <span class="mr-2">@Model.Details.OtorhinolaryngologyExamination.RightEarNormal</span>
                                                    <span class="mr-2">Nói thầm:</span>
                                                    <span class="mr-2">@Model.Details.OtorhinolaryngologyExamination.RightEarWhisper</span>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="d-flex w-100">
                                                <span class="mr-2 text-nowrap text-justify">- Các bệnh về tai mũi họng (nếu có):</span>
                                            </td>
                                            <td>@Model.Details.OtorhinolaryngologyExamination.OtorhinolaryngologyDiseases</td>
                                        </tr>
                                    </table>
                                    <div class="ml-4 d-flex mb-2">
                                        <span class="mr-2 text-nowrap">Phân loại:</span>
                                        <span class="w-100 pr-2">@Model.Details.OtorhinolaryngologyExamination.OtorhinolaryngologyLevel</span>
                                    </div>
                                }
                                else
                                {
                                    <table class="table-borderless w-100 table-responsive">
                                        <tr>
                                            <td rowspan="2">- Kết quả khám thính lực:</td>
                                            <td>
                                                <div class="d-block">
                                                    <span class="mr-2">Tai trái:</span>
                                                    <span class="mr-2">Nói thường:</span>
                                                    <span class="mr-2">.......................</span>
                                                    <span class="mr-2">Nói thầm:</span>
                                                    <span class="mr-2">.......................</span>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="d-block">
                                                    <span class="mr-2">Tai phải:</span>
                                                    <span class="mr-2">Nói thường:</span>
                                                    <span class="mr-2">.......................</span>
                                                    <span class="mr-2">Nói thầm:</span>
                                                    <span class="mr-2">.......................</span>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="d-flex w-100">
                                                <span class="mr-2 text-nowrap">- Các bệnh về tai mũi họng (nếu có):</span>
                                            </td>
                                            <td class="w-100"><input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled></td>
                                        </tr>
                                    </table>
                                    <div class="ml-4 d-flex mb-2">
                                        <span class="mr-2 text-nowrap">Phân loại:</span>
                                        <span class="w-100 pr-2"><input class="w-100" style="border:none; border-bottom: 1px dotted black" disabled></span>
                                    </div>
                                }
                            }
                        </td>
                        <td class="align-middle">
                            <p class="text-center d-flex align-items-end justify-content-center" style="height: 100px">
                                @if (Model.Details.OtorhinolaryngologyExamination.IsRegistered)
                                {
                                    @Model.Details.OtorhinolaryngologyExamination.DoctorName
                                }
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div>
                                <span class="mr-2"><strong>6. Răng - Hàm - Mặt</strong></span>
                                @{
                                    if (Model.Details.OralAndMaxillofacialExamination.IsRegistered)
                                    {
                                        <table class="table-borderless w-100 table-responsive" style="border:none;">
                                            <tr>
                                                <td rowspan="2">- Kết quả khám:</td>
                                                <td>
                                                    <div class="d-block">
                                                        <span class="mr-2">Hàm trên:</span>
                                                        <span class="mr-2">@Model.Details.OralAndMaxillofacialExamination.UpperJaw</span>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <div class="d-block">
                                                        <span class="mr-2">Hàm dưới:</span>
